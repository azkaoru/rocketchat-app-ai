{
    "name": "ai-bot-app",
    "version": "1.0.0",
    "description": "RocketChat app that responds to bot mentions with message content, ID, channel name, and topic",
    "main": "AiBotApp.ts",
    "scripts": {
        "build": "tsc",
        "deploy": "rc-apps deploy --url $ROCKETCHAT_URL --username $ROCKETCHAT_USERNAME --password $ROCKETCHAT_PASSWORD",
        "package": "rc-apps package"
    },
    "keywords": [
        "rocketchat",
        "bot",
        "ai"
    ],
    "author": "azkaoru",
    "license": "MIT",
    "devDependencies": {
        "@rocket.chat/apps-engine": "1.44.0",
        "@types/node": "14.14.6",
        "typescript": "^5.6.2"
    },
    "dependencies": {
        "@rocket.chat/ui-kit": "^0.31.22"
    }
}
